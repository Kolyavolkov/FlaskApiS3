
pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '1'))
  }
  environment {
    AWS_DEFAULT_REGION='eu-central-1'
  }
  parameters {
    string(name: 'STACK_NAME', defaultValue: '')
  }
  stages {
    stage('Update stack') {
      steps {
        withCredentials([aws(credentialsId: 'AwsVolkov', accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
          sh('''aws --region central-1 cloudformation update-stack \
          --stack-name $(STACK_NAME) \
          --template-body file://aws/AppTemplate.yaml \
          --capabilities CAPABILITY_IAM \
          --parameters ParameterKey=CommitID,ParameterValue=$(GIT_COMMIT)'''
      }
    }
  }
}